# roji development environment variables
# Copy this file to .env and customize as needed:
#   cp .env.example .env

# Docker network to watch
ROJI_NETWORK=roji

# Base domain for auto-generated hostnames
ROJI_DOMAIN=dev.localhost

# HTTP port (for redirect)
ROJI_HTTP_PORT=80

# HTTPS port
ROJI_HTTPS_PORT=443

# Dashboard hostname (defaults to base domain)
ROJI_DASHBOARD=dev.localhost

# Log level (debug, info, warn, error)
ROJI_LOG_LEVEL=debug
